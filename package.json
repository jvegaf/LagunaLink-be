  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules --inspect=0.0.0.0:9267 ./src/app/lagunalink_be/server.ts",
    "test": "npm run test:unit && npm run test:features",
    "deploy": "npm run build && npm run start",
    "test:unit": "NODE_ENV=test jest",
    "test:features": "NODE_ENV=test cucumber-js -p default --exit",
    "start": "NODE_ENV=production node dist/src/app/lagunalink_be/server",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml}' dist/src",
    "build:clean": "rm -r dist; exit 0"
